<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center"
    tools:context=".Driver.Driver">

    <androidx.drawerlayout.widget.DrawerLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:openDrawer="start"
        android:id="@+id/drawer_layout">
        <com.google.android.material.navigation.NavigationView
            android:id="@+id/navigation_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:layout_gravity="start"
            app:menu="@menu/navigation_view"
            app:headerLayout="@layout/nav_view_menu_header">
            <LinearLayout
                android:id="@+id/logoutNavViewMenu"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/header_menu_title"
                android:layout_alignParentBottom="true"
                android:gravity="bottom|center"
                android:layout_marginBottom="@dimen/_25sdp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgLogoutDriver"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:rotation="180"
                    android:scaleType="fitStart"
                    android:src="@drawable/ic_logout"
                    android:textAlignment="textEnd"
                    app:tint="@color/pesan" />

                <TextView
                    android:id="@+id/logoutDriver"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Keluar"
                    android:textColor="@color/pesan"
                    android:textSize="@dimen/_14sdp"
                    android:textStyle="bold" />
            </LinearLayout>
        </com.google.android.material.navigation.NavigationView>
    </androidx.drawerlayout.widget.DrawerLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/content_view_home_driver">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <fragment
                xmlns:map="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/map"
                map:cameraBearing="112.5"
                android:name="com.google.android.gms.maps.SupportMapFragment">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:background="@drawable/rounded_home_header_driver"
                        android:padding="@dimen/_10sdp"
                        android:gravity="center"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/powerOnOfDriver"
                            android:layout_weight="2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_power"
                            android:scaleType="center"/>
                        <TextView
                            android:textAlignment="center"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Online"
                            android:textSize="22dp"
                            android:textStyle="bold"
                            android:textColor="@color/white"/>
                        <ImageView
                            android:id="@+id/hamburgerMenuDriver"
                            android:layout_weight="2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_hamburger_menu"/>
                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent">
                        <ImageView
                            android:id="@+id/myLocDriver"
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_30sdp"
                            android:src="@drawable/ic_my_location"
                            android:scaleType="center"
                            android:layout_marginBottom="@dimen/_180sdp"
                            android:background="@drawable/rounde_button"
                            android:layout_marginRight="@dimen/_15sdp"
                            android:clickable="true"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentBottom="true"
                            android:adjustViewBounds="true" />
                    </RelativeLayout>
                </LinearLayout>


            </fragment>
        </LinearLayout>
    </LinearLayout>
    <androidx.core.widget.NestedScrollView
        android:animateLayoutChanges="true"
        android:id="@+id/bottom_sheet"
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:background="@drawable/rounded_bottom_sheet"
        app:behavior_hideable="false"
        app:behavior_peekHeight="@dimen/_170sdp"
        app:layout_dodgeInsetEdges="top"
        app:layout_behavior="@string/bottom_sheet_behavior">

        <RelativeLayout
            android:padding="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_3sdp"
                android:background="@color/white"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:layout_marginRight="@dimen/_100sdp"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="@dimen/_100sdp"/>

            <RelativeLayout
                android:id="@+id/sectionProfileDriver"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:background="@drawable/rounded_rectangle"
                android:layout_marginTop="@dimen/_10sdp"
                android:padding="@dimen/_8sdp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_5sdp"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/imageSectionDriver"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:scaleType="center"
                        android:layout_marginRight="@dimen/_10sdp"/>
                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/namaSectionDriver"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Bayu Prasetyo"
                            android:textColor="@color/blue_sky"
                            android:textStyle="bold"/>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/platSectionDriver"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="E 2345 YAA"
                                android:textColor="@color/blue_sky"
                                android:layout_marginRight="@dimen/_8sdp"/>
                            <View
                                android:layout_width="@dimen/_1sdp"
                                android:layout_height="match_parent"
                                android:background="@color/blue_sky"
                                android:layout_marginRight="@dimen/_8sdp"/>
                            <TextView
                                android:id="@+id/merkMobilSectionDriver"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Grand Max"
                                android:textColor="@color/blue_sky"
                                android:layout_marginRight="@dimen/_15sdp"/>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_weight="2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/saldoSectionDriver"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Rp. 59.000"
                            android:textColor="@color/blue_sky"
                            android:textStyle="bold"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Saldo Kredit"
                            android:textSize="@dimen/_10sdp"
                            android:textColor="@color/blue_sky"/>
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sectionProfileDriver"
                android:layout_marginTop="9dp"
                android:layout_marginBottom="94dp"
                android:background="@drawable/rounded_rectangle"
                android:padding="@dimen/_10sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/_40sdp"
                            android:layout_height="@dimen/_40sdp"
                            android:layout_weight="1"
                            android:background="@drawable/circle_orange"
                            android:scaleType="center"
                            android:src="@drawable/ic_car" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Jenis Layanan"
                            android:textColor="@color/blue_sky"
                            android:textSize="@dimen/_9sdp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/_40sdp"
                            android:layout_height="@dimen/_40sdp"
                            android:layout_weight="1"
                            android:background="@drawable/rounded_corner_pesan"
                            android:scaleType="center"
                            android:src="@drawable/ic_wallet" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pendapatan"
                            android:textColor="@color/blue_sky"
                            android:textSize="@dimen/_9sdp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/_40sdp"
                            android:layout_height="@dimen/_40sdp"
                            android:layout_weight="1"
                            android:background="@drawable/rounded_corner_pesan"
                            android:scaleType="center"
                            android:src="@drawable/ic_wallet" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Dompet Kredit"
                            android:textColor="@color/blue_sky"
                            android:textSize="@dimen/_9sdp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/_40sdp"
                            android:layout_height="@dimen/_40sdp"
                            android:layout_weight="1"
                            android:background="@drawable/rounded_corner_pesan"
                            android:scaleType="center"
                            android:src="@drawable/my_destination" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tujuan Saya"
                            android:textColor="@color/blue_sky"
                            android:textSize="@dimen/_9sdp" />
                    </LinearLayout>
                </LinearLayout>

            </RelativeLayout>

        </RelativeLayout>



    </androidx.core.widget.NestedScrollView>





</androidx.coordinatorlayout.widget.CoordinatorLayout>