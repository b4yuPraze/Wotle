<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#F5F5F5"
    android:orientation="vertical"
    tools:context=".Activity.SignUp">

    //Bagian Back
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:background="#D9D9D9">

        <ImageView
            android:id="@+id/iconBack"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginRight="25dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/icon_back" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="#B0AAAA"
            android:singleLine="true"
            android:text="Metode pembayaran"
            android:textSize="22dp"
            android:textStyle="bold"
            android:drawableBottom="@color/black"/>

    </LinearLayout>

    //COD
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/icon_cod" />

        <TextView
            android:id="@+id/bayarDitempat"
            android:layout_width="match_parent"
            android:paddingTop="10dp"
            android:layout_height="fill_parent"
            android:text="Cash atau Bayar Ketika Sampai"
            android:textStyle="bold"
            android:textSize="18dp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:visibility="visible"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_height="2dp"
        android:background="#AFBABB"/>

    //Transfer Bank
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/icon_bank" />

        <TextView
            android:layout_width="match_parent"
            android:paddingTop="10dp"
            android:textStyle="bold"
            android:layout_height="fill_parent"
            android:text="Transfer Bank"
            android:textSize="18dp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:visibility="visible"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_height="2dp"
        android:background="#AFBABB"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="45dp"
        android:layout_marginTop="10dp">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/icon_bri" />

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">


            <TextView
                android:id="@+id/firstLine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bank BRI"
                android:textStyle="bold"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/secondLine"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_toRightOf="@id/icon"
                android:textColor="@color/cardview_dark_background"
                android:text="Hanya menerima dari Bank BRI Metode Pembayaran Lebih Mudah"
                android:textSize="12sp" />

        </LinearLayout>

        <ImageView
            android:layout_weight="3"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_check_circle_24"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:visibility="visible"
        android:layout_marginStart="45dp"
        android:layout_marginEnd="20dp"
        android:layout_height="2dp"
        android:background="#AFBABB"/>
</LinearLayout>