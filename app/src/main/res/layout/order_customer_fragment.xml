<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="10dp"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_weight="1.7"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:orientation="vertical"
        android:background="@drawable/rounded_rectangle">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mau ke mana?"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:textStyle="bold"/>

            <View
                android:layout_width="3dp"
                android:visibility="visible"
                android:layout_height="30dp"
                android:layout_marginRight="10dp"
                android:background="@color/black"/>

            <TextView
                android:layout_weight="3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sekarang?"
                android:textColor="#455A64" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:visibility="visible"
            android:layout_marginLeft="13dp"
            android:layout_marginRight="13dp"
            android:layout_height="2dp"
            android:background="#AFBABB"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_weight="1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_pick_up_me"/>

            <TextView
                android:layout_weight="5"
                android:id="@+id/lokasiAndaPesanan"
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:hint="Set lokasi anda sesuai GPS"
                android:textColorHint="#795548" />

            <ImageView
                android:layout_weight="1"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginTop="10dp"
                android:textAlignment="textEnd"
                android:src="@drawable/ic_chevron_right"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:visibility="visible"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_height="2dp"
            android:background="#AFBABB"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_weight="1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_pick_up_me"/>

            <TextView
                android:layout_weight="5"
                android:id="@+id/lokasiTujuan"
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:hint="Set lokasi tujuan anda"
                android:textColorHint="#795548" />

            <ImageView
                android:layout_weight="1"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginTop="10dp"
                android:textAlignment="textEnd"
                android:src="@drawable/ic_chevron_right"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:visibility="visible"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_height="2dp"
            android:background="#AFBABB"/>

    </LinearLayout>

    <ScrollView
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama Pemesan"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/namaPemesan"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/rounded_rectangle"
                android:hint="Nama Lengkap"
                android:inputType="textMultiLine"
                android:paddingLeft="5dp"
                android:singleLine="false"
                android:textColor="@color/black"
                android:textColorHint="#795548"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Titik Penjemputan"
                android:layout_marginBottom="5dp"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/titikPenjemputan"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/rounded_rectangle"
                android:hint="Kuningan - Jl.Siliwangi no 55"
                android:inputType="textMultiLine"
                android:paddingLeft="5dp"
                android:singleLine="false"
                android:textColor="@color/black"
                android:textColorHint="#795548"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Titik Tujuan"
                android:layout_marginBottom="5dp"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/titikTujuan"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/rounded_rectangle"
                android:hint="Jakarta Barat - Jl.Sudirman no 43"
                android:inputType="textMultiLine"
                android:paddingLeft="5dp"
                android:singleLine="false"
                android:textColor="@color/black"
                android:textColorHint="#795548"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Tanggal Berangkat"
                android:layout_marginBottom="5dp"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/tglBerangkat"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/rounded_rectangle"
                android:hint="18 - Juni  - 2022"
                android:inputType="text"
                android:paddingLeft="5dp"
                android:singleLine="false"
                android:textColor="@color/black"
                android:textColorHint="#795548"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Jumlah Penumpang"
                android:layout_marginBottom="5dp"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/jumlahPenumpang"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingLeft="5dp"
                android:background="@drawable/rounded_rectangle"
                android:hint="Contoh : 1"
                android:inputType="number"
                android:singleLine="false"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Deskripsi"
                android:layout_marginBottom="5dp"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/deskripsi"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingLeft="5dp"
                android:background="@drawable/rounded_rectangle"
                android:hint="Orang atau barang atau dokumen"
                android:inputType="textMultiLine"
                android:singleLine="false"
                android:layout_marginBottom="30dp"
                android:textColor="@color/black"
                android:textSize="14sp" />

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_weight="2.1"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/btnTotalHarga"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/rounded_rectangle"
            android:padding="15dp"
            android:text="Rp 150.000"
            android:textAlignment="center"
            android:textColor="#455A64"
            android:textSize="14dp" />

        <Button
            android:layout_weight="1"
            android:id="@+id/btnPesan"
            android:layout_marginLeft="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/pesan"
            android:background="@drawable/rounded_rectangle"
            android:text="PESAN"
            android:textSize="14sp" />
    </LinearLayout>

</LinearLayout>